@inject DialogService DialogService
@using Common.Models
@using FrontEnd_Auth.Components.Pages
<RadzenPanelMenuItem Path="/" Text="Hem" Icon="home" />
<AuthorizeView>
    <Authorized>
<RadzenPanelMenuItem Text="Kunder" Icon="person">
    <RadzenPanelMenuItem Click=@CreateCustomer Text="Skapa/Redigera Kund" Icon="person_add" />
        <RadzenPanelMenuItem Path="Customers" Text="Visa Kunder" Icon="list" />
    </RadzenPanelMenuItem>
<RadzenPanelMenuItem Text="Produkter" Icon="local_grocery_store">
    <RadzenPanelMenuItem Click=@CreateProduct Text="Skapa/Redigera Produkt" Icon="add_shopping_cart" />
        <RadzenPanelMenuItem Path="Products" Text="Visa Produkter" Icon="list" />
    </RadzenPanelMenuItem>
<RadzenPanelMenuItem Text="Kategorier" Icon="category">
    <RadzenPanelMenuItem Click=@CreateCategory Text="Skapa Kategori" Icon="add" />
        <RadzenPanelMenuItem Path="Categories" Text="Visa Kategorier" Icon="list" />
    </RadzenPanelMenuItem>
<RadzenPanelMenuItem Text="Ordrar" Icon="local_shipping">
    <RadzenPanelMenuItem Click=@CreateOrder Text="Skapa Order" Icon="add" />
    <RadzenPanelMenuItem Path="orders" Text="Visa Ordrar" Icon="list" />
</RadzenPanelMenuItem>
</Authorized>
</AuthorizeView>


@code {
        public async Task CreateCustomer()
        {
            await DialogService.OpenAsync<CreateCustomer>("Create Customer");
            new DialogOptions() { Width = "700px", Height = "512px", Resizable = true, Draggable = true };

        }
        public async Task CreateProduct()
        {
            await DialogService.OpenAsync<CreateProduct>("Create Product");
            new DialogOptions() { Width = "700px", Height = "512px", Resizable = true, Draggable = true };

        }
        public async Task CreateCategory()
        {
            await DialogService.OpenAsync<CreateCategory>("Create Category");
            new DialogOptions() { Width = "700px", Height = "512px", Resizable = true, Draggable = true };

        }
        public async Task CreateOrder()
        {
            await DialogService.OpenAsync<CreateOrder>("Create Order");
            new DialogOptions() { Width = "700px", Height = "512px", Resizable = true, Draggable = true };
        }
    }

